<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Warning" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <icons>
        <Image url="@/images/warning_icon.png" />
    </icons>
    <scene>
        <Scene>
            <stylesheets>
                <URL value="@WarningWindow.css" />
            </stylesheets>

            <HBox fx:id="warningMessageContainer" alignment="CENTER">
                <children>
                    <Label fx:id="warningMessage" text="Label">
                        <HBox.margin>
                            <Insets right="5.0" />
                        </HBox.margin>
                    </Label>
                    <!-- OK Button -->
                    <Button fx:id="okButton" mnemonicParsing="false" onAction="#okClicked" text="OK" HBox.hgrow="NEVER">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" top="5.0" />
                        </HBox.margin>
                    </Button>

                    <!-- Cancel Button -->
                    <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelClicked" text="Cancel" HBox.hgrow="NEVER">
                        <HBox.margin>
                            <Insets bottom="5.0" left="5.0" top="5.0" />
                        </HBox.margin>
                    </Button>
                </children>
                <opaqueInsets>
                    <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                </opaqueInsets>
                <padding>
                    <Insets bottom="10.0" left="5.0" right="10.0" top="5.0" />
                </padding>
            </HBox>
        </Scene>
    </scene>
</fx:root>
